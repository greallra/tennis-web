<% if(i > 10){ %>
        <div class="column is-half">
            <article class="oa-d">
                <a href='<%= process.env.LOCAL_HOST %>/article/<%= art.id %>' class="oa-d-link">
                <div class="oa-d-imgCont">
                    <img class="oa-d-img" src="<%= art.img %>" alt="">
                </div>
                <p class="oa-d-timestamp timestamp"><%= art.pub %></p>
                <h3 class="oa-d-title is-size-5 has-text-dark has-text-weight-semibold"><%= art.tit %></h3>
                <p class="oa-d-author"><%= art.aut %></p>  
                </a>
            </article>
        </div>
<% } %>